<form action="/books/{{book.id}}?_method=PUT" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <h3>Edit Book Title</h3>
    <label for="formGroupExampleInput">Book Title</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Add your books" name="title" value="{{book.title}}">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Details</label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Add details" name="details" value="{{book.details}}">
  </div>
  <button type="submit" class="btn btn-primary">Edit Book</button>
</form>