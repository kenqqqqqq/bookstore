<form action="/books" method="post">
  <div class="form-group">
    <label for="formGroupExampleInput">Book Title</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Add your books" name="title" value="{{title}}">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Details</label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Add details" name="details" value="{{details}}">
  </div>
  <button type="submit" class="btn btn-primary">Add Book</button>
</form>